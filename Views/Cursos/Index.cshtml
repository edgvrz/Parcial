@model IEnumerable<Parcial.Models.Curso>
@{
    ViewData["Title"] = "Lista de Cursos";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Curso</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Cupo Máximo</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Codigo</td>
        <td>@item.Nombre</td>
        <td>@item.Creditos</td>
        <td>@item.CupoMaximo</td>
        <td>@(item.Activo ? "Sí" : "No")</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
        </td>
    </tr>
}
    </tbody>
</table>
