@model Parcial.Models.Curso
@{
    ViewData["Title"] = "Nuevo Curso";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Creditos"></label>
        <input asp-for="Creditos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CupoMaximo"></label>
        <input asp-for="CupoMaximo" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
